{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && chmod +x gradlew && ./gradlew clean build -x test"
  },
  "deploy": {
    "startCommand": "cd backend && java -jar build/libs/miplan-backend.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
